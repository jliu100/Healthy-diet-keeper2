<% include ./partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/showMore_Selected_Reci_Info.css">

<h1></h1>
<div class="ui main text container segment">  <!-- use ui: to change location of this container-->
    <div class="ui huge header"> <%=foodName%></div> <!-- big header -->
    <div class="ui top attached"> 
        <div class="item"></div>
            <img class="ui centered image" src=<%=img%>  alt="Food image ">
            <div class="content" >
                <h2>Calories: <%=calories%></h2>
            </div>
            <div class="description"  style="text-align: center;">
                <h1>Ingredients:</h1>
                <%var newData=[];%>
                
                <%data.ingredients.forEach(function(el){%>
                    <h4><%=el.name%>, <%=el.amount.metric.value%>g </h4>
                    <%var elements=""%>
                    
                    <%elements=elements+ el.name+",";%>
                    <%elements=elements+ el.amount.metric.value;%>
                    <%newData.push(elements);%>
                <%});%>
            </div>  
            <form  action="/user/<%=food_id%>/<%=newData%>/<%=foodName%>/<%=calories%>/<%=user._id%>/addRecipies?_method=PUT" method="POST">
        

            <select id='recipe' name="recipe_Add" required>
                <option value="d1_B">Day1-Breakfast</option>
                <option value="d1_L">Day1-Lunch</option>
                <option value="d1_D">Day1-Dinner</option>

                <option value="d2_B">Day2-Breakfast</option>
                <option value="d2_L">Day2-Lunch</option>
                <option value="d2_D">Day2-Dinner</option>

                <option value="d3_B">Day3-Breakfast</option>
                <option value="d3_L">Day3-Lunch</option>
                <option value="d3_D">Day3-Dinner</option>

                <option value="d4_B">Day4-Breakfast</option>
                <option value="d4_L">Day4-Lunch</option>
                <option value="d4_D">Day4-Dinner</option>

                <option value="d5_B">Day5-Breakfast</option>
                <option value="d5_L">Day5-Lunch</option>
                <option value="d5_D">Day5-Dinner</option>

                <option value="d6_B">Day6-Breakfast</option>
                <option value="d6_L">Day6-Lunch</option>
                <option value="d6_D">Day6-Dinner</option>

                <option value="d7_B">Day7-Breakfast</option>
                <option value="d7_L">Day7-Lunch</option>
                <option value="d7_D">Day7-Dinner</option>
                
            </select>
            <button class="ui green button">Add</button>
        </form>

            
    </div>
</div>





<% include ./partials/footer %>